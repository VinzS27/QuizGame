<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stars"
    android:gravity="center"
    tools:context=".Activity_QeA">

    <ImageView
        android:id="@+id/e_quiz"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/e_quiz"
        android:layout_above="@+id/card1"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="e_quiz"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        style="@style/TestCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F43FC1">
            <TextView
                android:textSize="25sp"
                android:textColor="@color/black"
                android:padding="25dp"
                android:gravity="center"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:id="@+id/quizText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Question"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/TestCard_answer"
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="#1B3B72"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/aanswer"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Answer"
                android:textColorHint="@color/white"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/TestCard_answer"
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="#1B3B72"
                android:textColorHint="@color/white"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/banswer"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Answer"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/TestCard_answer"
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card3"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="#1B3B72"
                android:textColorHint="@color/white"
                android:padding="15dp"
                android:gravity="center"
                android:id="@+id/canswer"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Answer"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        style="@style/TestCard_answer"
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:background="#1B3B72"
                android:padding="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:id="@+id/danswer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Answer"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>